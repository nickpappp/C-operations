internal class Program
{
    private static void Main(string[] args)
    {
      
       Console.WriteLine("choose 2 numbers");
       string x=Console.ReadLine();
       string y=Console.ReadLine();
       Convert.ToDouble(x);
       Convert.ToDouble(y);
       Console.WriteLine($"your numbers are {x} and {y}");
       Console.WriteLine("Now choose what do you want to do, Addition, Substraction, Multiplication or Division. You can only type 1 of these types");
       string newOperation= Console.ReadLine();
       if (newOperation=="Addition") {
       Double z=(Convert.ToDouble(x) +Convert.ToDouble(y));
       Console.WriteLine(z);}
       else if  (newOperation=="Substraction") {
      Double z=(Convert.ToDouble(x) -Convert.ToDouble(y));
       Console.WriteLine(z);
       }else if (newOperation=="Multiplication") {
       Double z=(Convert.ToDouble(x) *Convert.ToDouble(y));
       Console.WriteLine(z);
       }else if (newOperation=="Division") {
       Double z=(Convert.ToDouble(x) /Convert.ToDouble(y));
       Console.WriteLine(z);
       }else {
        Console.WriteLine("You aren't doing neither Addition nor Substraction nor Multiplication nor Division!  ");
       
       }

       
    }
}
